{
  "name": "@zthun/helpful",
  "description": "Useful low level classes and functions that help with common tasks.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/helpful"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf --glob 'dist' 'reports' 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/docs' 'packages/**/*.tgz' 'packages/**/*.log'",
    "test": "vitest --run --coverage",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.6",
    "@types/react": "^18.2.11",
    "@types/uuid": "^9.0.2",
    "@vitest/coverage-istanbul": "^0.32.0",
    "@zthun/lint-janitor": "^14.2.0",
    "@zthun/lint-janitor-config": "^14.2.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lerna": "^7.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0"
  },
  "packageManager": "yarn@3.3.1"
}
