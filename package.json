    "@vitest/coverage-istanbul": "^0.28.5",
    "@zthun/lint-janitor": "^14.1.0",
    "@zthun/lint-janitor-config": "^14.1.0",
    "husky": "^8.0.3",
    "lerna": "^6.5.1",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.2",
    "vitest": "^0.28.5"
  },
  "packageManager": "yarn@3.3.1"
