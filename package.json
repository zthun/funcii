{
  "name": "@zthun/helpful",
  "description": "Useful low level classes and functions that help with common tasks.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/helpful"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf --glob 'dist' 'reports' 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/docs' 'packages/**/*.tgz' 'packages/**/*.log' 'packages/**/.certificates'",
    "test": "vitest --run --coverage",
    "lint": "lint-janitor",
    "check": "tsc --noEmit",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn check && yarn test && yarn build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.4",
    "@types/react": "^19.0.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@zthun/lint-janitor": "^18.0.5",
    "@zthun/lint-janitor-config": "^18.0.5",
    "happy-dom": "^16.3.0",
    "husky": "^9.1.7",
    "lerna": "^8.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "resolutions": {
    "rollup": "npm:@rollup/wasm-node@*"
  },
  "packageManager": "yarn@4.6.0"
}
