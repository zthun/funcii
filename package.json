{
  "name": "@zthun/helpful",
  "description": "Useful low level classes and functions that help with common tasks.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/helpful"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf --glob 'dist' 'reports' 'coverage' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/docs' 'packages/**/*.tgz' 'packages/**/*.log'",
    "test": "vitest --run --coverage",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "yarn clean && yarn lint && yarn test && yarn build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.0",
    "@types/react": "^18.0.38",
    "@types/uuid": "^9.0.1",
    "@vitest/coverage-istanbul": "^0.30.1",
    "@zthun/lint-janitor": "^14.1.0",
    "@zthun/lint-janitor-config": "^14.1.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lerna": "^6.6.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.1",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.30.1"
  },
  "packageManager": "yarn@3.3.1"
}
